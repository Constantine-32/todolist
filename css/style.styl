border = 2px solid #333

@import url('https://fonts.googleapis.com/css2?family=Roboto&display=swap')

*
  margin 0
  padding 0

body
  color #fff
  font-family 'Roboto', sans-serif
  background #111
  width 50vw
  min-width 960px
  margin 0 auto
  overflow hidden

header
  display flex
  height 12vh
  min-height 120px
  h1
    font-size 3rem
    line-height 120px
    font-weight normal
    width 25%
    text-align center

.header__search
  display flex
  justify-content center
  align-items center
  width 75%
  height 100%
  text-align center
  input
    color #fff
    font-size 1rem
    width 60%
    height 25%
    background #111
    border border
    border-radius 5px
    padding 0 10px

main
  position relative
  display flex
  border border

.options
  display flex
  flex-direction column
  width 25%
  height 70vh
  min-height 600px
  border-right border

.options__option
  height 52px
  line-height 52px
  font-size 1.3rem
  padding-left 1.3rem
  margin 4px 4px 0 4px
  cursor pointer
  &:hover
    background #333

.options__title
  height 52px
  line-height 52px
  font-size 1.3rem
  padding-left 1.3rem
  margin 4px 4px 0 4px
  border-bottom border


.options__option--selected
    background #222

.tasks
  width 75%
  height 70vh

.tasks__header
  height 58px
  line-height 58px
  font-size 1.3rem
  text-align center
  border-bottom border

.hidden
  display none

.tasks__new-task
  position absolute
  height 40px
  width 40px
  right 0
  bottom 0
  margin 10px
  background #111
  border border

.task
  display flex
  height 38px
  line-height 38px
  border-bottom border

.task__done
  width 10%
  text-align center
  border-right border

.task__text
  width 75%
  padding 0 1rem
  border-right border

.task__important
  text-align center
  width 15%

.new-task
  position absolute
  top -50%
  left 50%
  padding 0 3rem 1rem 3rem
  transform translate(-50%, -50%)
  display flex
  flex-direction column
  background #111
  border border
  transition top 1s
  h1
    font-size 2rem
    height 5rem
    line-height 5rem
    font-weight normal
    text-align center

.new-task__section
  display flex
  justify-content flex-end
  line-height 2rem
  margin .5rem

  label
    font-size 1rem
    text-align right
    padding-right 1rem

  input, textarea, select, button
    font-size 1rem
    color #fff
    background #111
    border border
    border-radius 5px
    padding 0 .5rem

  input[type="text"]
    width 320px

  select
    width 340px

  input[type="checkbox"]
    height 1rem
    width 1rem
    margin .5rem

  textarea
    resize none
    font-size 1rem
    font-family 'Roboto', sans-serif
    padding .5rem
    width 20rem

  button
    height 2.5rem
    padding 0 1rem
    cursor pointer
    margin-left 3px

.new-task__section__warning
  color #111
  background #e74c3c
  border 1px solid #c0392b
  border-radius 3px
  padding 0 1rem