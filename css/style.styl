border = 2px solid #333

@import url('https://fonts.googleapis.com/css2?family=Roboto&display=swap')

*
  margin 0
  padding 0

body
  color #fff
  font-family 'Roboto', sans-serif
  background #111
  width 50vw
  min-width 960px
  margin 0 auto
  overflow hidden

header
  display flex
  height 12vh
  min-height 120px
  h1
    font-size 3rem
    line-height 120px
    font-weight normal
    width 25%
    text-align center

.header__search
  display flex
  justify-content center
  align-items center
  width 75%
  height 100%
  text-align center
  input
    color #fff
    font-size 1rem
    width 60%
    height 25%
    background #111
    border border
    border-radius 5px
    padding 0 10px

main
  position relative
  display flex
  border border

.options
  display flex
  flex-direction column
  width 25%
  height 70vh
  min-height 600px
  border-right border
  overflow auto

.options::-webkit-scrollbar
  display none

.options__option
  height 3rem
  line-height 3rem
  font-size 1rem
  padding-left 1rem
  margin 4px 4px 0 4px
  cursor pointer
  &:hover
    background #333

.options__newlist
  color #fff
  height 3rem
  line-height 3rem
  font-size 1rem
  padding-left 1rem
  margin 4px 4px 0 4px
  background #111
  border border

.options hr
  border 1px solid #333
  margin 4px 4px 0 4px

.options__option--selected
    background #222

.tasks
  width 75%
  height 70vh

.tasks__header
  height 58px
  line-height 58px
  font-size 1.3rem
  text-align center
  border-bottom border

.tasks__container
  overflow auto

.tasks__container::-webkit-scrollbar
  display none

.hidden
  display none !important

.tasks__new-task
  position absolute
  height 40px
  width 40px
  right 0
  top 0
  margin 9px
  background #111
  border border
  border-radius 5px
  background url("../img/bg-new-task.png") center center no-repeat
  cursor pointer

.task
  display flex
  align-items: center
  height 2rem
  border-bottom border

.task .checkbox-label
  margin 0 1rem

.task__title
  margin-right auto

.task__title--completed
  text-decoration line-through

.task__title--important
  font-weight bold

.new-task, .info-task
  position absolute
  top -50%
  left 50%
  padding 0 3rem 1rem 3rem
  transform translate(-50%, -50%)
  display flex
  flex-direction column
  background #111
  border border
  transition top 1s
  h1
    font-size 2rem
    height 5rem
    line-height 5rem
    font-weight normal
    text-align center

.new-task__section
  display flex
  justify-content flex-end
  align-items center
  line-height 2rem
  margin .5rem

  label
    font-size 1rem
    text-align right
    padding-right 1rem

  input, textarea, select, button
    font-size 1rem
    color #fff
    background #111
    border border
    border-radius 5px
    padding 0 .5rem

  input[type="text"]
    width 320px
    height 2rem

  select
    width 340px
    height 2rem

  textarea
    resize none
    font-size 1rem
    font-family 'Roboto', sans-serif
    padding .5rem
    width 20rem

  button
    height 2.5rem
    padding 0 1rem
    cursor pointer
    margin-left 3px

.new-task__section__warning
  color #111
  background #e74c3c
  border 1px solid #c0392b
  border-radius 3px
  padding 0 1rem

// Checkbox CSS
.checkbox-label
  display block
  position relative
  cursor pointer
  height 22px
  width 22px

.checkbox-label input
  position absolute
  opacity 0
  cursor pointer

.checkbox-completed
  position absolute
  top 0
  left 0
  height 18px
  width 18px
  background-color transparent
  border-radius 50%
  transition all 0.3s ease-out
  border 2px solid #ecf0f1

input:checked ~ .checkbox-completed
  background-color #ecf0f1
  border-radius 50%
  transform rotate(0deg) scale(1)
  opacity 1
  border 2px solid #ecf0f1

.checkbox-completed::after
  position absolute
  content ''
  left 12px
  top 12px
  height 0
  width 0
  border-radius 50%
  border solid #111
  border-width 0 5px 5px 0
  transform rotate(0deg) scale(0)
  opacity 1
  transition all 0.3s ease-out

input:checked ~ .checkbox-completed::after
  transform rotate(45deg) scale(1)
  opacity 1
  left 4px
  top 1px
  width 5px
  height 10px
  border solid #111
  border-width 0 5px 5px 0
  background-color transparent
  border-radius 0

.checkbox-important
  position absolute
  top 0
  left 0
  height 18px
  width 18px
  background-color transparent
  border-radius 50%
  transition all 0.3s ease-out
  border 2px solid #f1c40f

input:checked ~ .checkbox-important
  background-color #ffcd00
  border-radius 50%
  opacity 1
  border 2px solid #f1c40f

